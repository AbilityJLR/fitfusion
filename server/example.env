# Environment (development, production)
ENV=development

# Database configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/fitfusion

# Frontend URL for redirects
FRONTEND_URL=http://localhost:3000

# Authentication
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
SECURITY_PASSWORD_SALT=your_salt_here

# Email verification and password reset
VERIFICATION_TOKEN_EXPIRE_HOURS=24
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=15

# Email settings (configure for sending emails)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@yourapp.com
EMAIL_FROM_NAME=YourAppName

# Rate limiting
RATE_LIMIT_SIGNIN_MINUTE=5
RATE_LIMIT_EMAIL_HOUR=3

# Server
PORT=8000
HOST=0.0.0.0 
# Environment
ENV=production

# Database configuration (Production)
DATABASE_URL=postgresql://postgres:${DB_PASSWORD}@fitfusion-db.flycast:5432/fitfusion

# Frontend URL for redirects
FRONTEND_URL=https://fitfusion.fly.dev

# Authentication
SECRET_KEY=${SECRET_KEY}
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
SECURITY_PASSWORD_SALT=${SECURITY_PASSWORD_SALT}

# Email verification and password reset
VERIFICATION_TOKEN_EXPIRE_HOURS=24
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=15

# Email settings (configure for sending emails)
SMTP_SERVER=${SMTP_SERVER}
SMTP_PORT=${SMTP_PORT}
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
EMAIL_FROM=${EMAIL_FROM}
EMAIL_FROM_NAME=FitFusion

# Rate limiting
RATE_LIMIT_SIGNIN_MINUTE=5
RATE_LIMIT_EMAIL_HOUR=3

# Server
PORT=8080
HOST=0.0.0.0 
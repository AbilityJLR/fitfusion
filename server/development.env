# Environment
ENV=development

# Database configuration (Development)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fitfusion

# Frontend URL for redirects
FRONTEND_URL=http://localhost:3000

# Authentication
SECRET_KEY=dev_secret_key_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
SECURITY_PASSWORD_SALT=dev_salt_change_in_production

# Email verification and password reset
VERIFICATION_TOKEN_EXPIRE_HOURS=24
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=15

# Email settings (configure for sending emails)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@fitfusion.com
EMAIL_FROM_NAME=FitFusion

# Rate limiting
RATE_LIMIT_SIGNIN_MINUTE=5
RATE_LIMIT_EMAIL_HOUR=3

# Server
PORT=8000
HOST=0.0.0.0 